{
	"name": "TradeItBook",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"start": "node node_modules/react-native/local-cli/cli.js start",
		"test": "jest",
		"android": "react-native run-android",
		"ios": "react-native run-ios",
		"rename": "node ./bin/rename.js",
		"dev": "start npm run start & npm run connect & start npm run log-a",
		"copy": "cpx \"../Shared/**/*.tsx\" src/Models/Shared --watch",
		"build": "tsc",
		"watch": "tsc --watch",
		"connect": "adb reverse tcp:8081 tcp:8081",
		"clean": "cd android && gradlew clean && cd ..",
		"log-a": "react-native log-android",
		"log-i": "react-native log-ios"
	},
	"dependencies": {
		"aws-amplify": "^1.1.10",
		"aws-amplify-react-native": "^2.0.8",
		"react": "16.6.1",
		"react-native": "0.57.5",
		"react-native-elements": "^0.19.1",
		"react-native-gesture-handler": "^1.0.9",
		"react-native-vector-icons": "^6.1.0",
		"react-navigation": "^3.0.0"
	},
	"devDependencies": {
		"@types/jest": "^23.3.9",
		"@types/react": "^16.7.6",
		"@types/react-native": "^0.57.9",
		"@types/react-test-renderer": "^16.0.3",
		"babel-jest": "23.6.0",
		"jest": "23.6.0",
		"metro-react-native-babel-preset": "0.49.1",
		"react-addons-test-utils": "^15.6.2",
		"react-native-typescript-transformer": "^1.2.10",
		"react-test-renderer": "16.6.1",
		"ts-jest": "^23.10.4",
		"typescript": "^3.1.6"
	},
	"jest": {
		"preset": "react-native",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"transform": {
			"^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
			"\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
		"testPathIgnorePatterns": [
			"\\.snap$",
			"<rootDir>/node_modules/"
		],
		"cacheDirectory": ".jest/cache"
	}
}
